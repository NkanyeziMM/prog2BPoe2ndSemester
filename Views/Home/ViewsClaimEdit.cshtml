@{
    ViewData["Title"] = "Edit Claim";
}

<h2>Edit Claim</h2>

<form method="post">
    <div>
        <label for="LecturerID">Lecturer ID</label>
        <input type="number" id="LecturerID" name="LecturerID" value="@Model.LecturerID" />
    </div>
    <div>
        <label for="HoursWorked">Hours Worked</label>
        <input type="number" id="HoursWorked" name="HoursWorked" value="@Model.HoursWorked" />
    </div>
    <div>
        <label for="TotalAmount">Total Amount</label>
        <input type="number" id="TotalAmount" name="TotalAmount" value="@Model.TotalAmount" />
    </div>
    <div>
        <label for="ClaimStatus">Claim Status</label>
        <input type="text" id="ClaimStatus" name="ClaimStatus" value="@Model.ClaimStatus" />
    </div>
    <button type="submit">Save Changes</button>
</form>
