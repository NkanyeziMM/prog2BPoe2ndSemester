@{
    ViewData["Title"] = "Create Claim";
}

<h2>Create a New Claim</h2>

<form method="post">
    <div>
        <label for="LecturerID">Lecturer ID</label>
        <input type="number" id="LecturerID" name="LecturerID" />
    </div>
    <div>
        <label for="HoursWorked">Hours Worked</label>
        <input type="number" id="HoursWorked" name="HoursWorked" />
    </div>
    <div>
        <label for="TotalAmount">Total Amount</label>
        <input type="number" id="TotalAmount" name="TotalAmount" />
    </div>
    <div>
        <label for="ClaimStatus">Claim Status</label>
        <input type="text" id="ClaimStatus" name="ClaimStatus" />
    </div>
    <button type="submit">Create</button>
</form>
